@model EmployeesInformationSystem.Models.EmployeeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid black;
            text-align: center;
            padding: 2px;
        }

        tr:nth-child(even) {
            background-color: antiquewhite;
        }
    </style>
</head>
<body>
    <div>
        <form class="form-horizontal" method="POST">

            <div class="row">

                <div class="col-lg-3">
                    <div class="form-group">

                        @Html.LabelFor(c => c.EmployeeId, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">

                            @Html.TextBoxFor(c => c.EmployeeId, null, new { @class = "form-control", placeholder = "Employee Id" })
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label class="control-label col-sm-2" for="Name">Name:</label>*@
                        @Html.LabelFor(c => c.Name, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @*<input type="text" class="form-control" id="Name" name="Name" placeholder="Name">*@
                            @Html.TextBoxFor(c => c.Name, null, new { @class = "form-control", placeholder = "Name" })
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label class="control-label col-sm-2" for="Contact">Contact:</label>*@
                        @Html.LabelFor(c => c.Email, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @*<input type="text" class="form-control" id="Contact" name="Contact" placeholder="Contact">*@
                            @Html.TextBoxFor(c => c.Email, null, new { @class = "form-control", placeholder = "example@gmail.com" })
                        </div>
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(c => c.PhoneNo, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">

                            @Html.TextBoxFor(c => c.PhoneNo, null, new { @class = "form-control", placeholder = "01XXXXXXXXX" })
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label class="control-label col-sm-2" for="Address">Address:</label>*@
                        @Html.LabelFor(c => c.Address, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @*<input type="text" class="form-control" id="Address" name="Address" placeholder="Address">*@
                            @Html.TextBoxFor(c => c.Address, null, new { @class = "form-control", placeholder = "Address" })
                        </div>
                    </div>
                    <div class="form-group">
                        @*<label class="control-label col-sm-2" for="Age">Age:</label>*@
                        @Html.LabelFor(c => c.Age, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @*<input type="text" class="form-control" id="Age" name="Age" placeholder="Age">*@
                            @Html.TextBoxFor(c => c.Age, null, new { @class = "form-control", placeholder = "Age" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(c => c.BasicSalary, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(c => c.BasicSalary, null, new { @class = "form-control", placeholder = "Basic Salary" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(c => c.DepartmentId, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.DropDownListFor(c => c.DepartmentId, Model.DepartmentSelectList, "--Select--", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(c => c.DistrictId, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.DropDownListFor(c => c.DistrictId, Model.DistrictSelectList, "--Select--", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success" value="Search">Search</button>
                        </div>
                    </div>

                </div>
                <div class="col-lg-3">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Sl.</th>
                                <th>Employee Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Age</th>
                                <th>Basic Salary</th>
                                <th>Department</th>
                                <th>District</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null && Model.Employees != null && Model.Employees.Count > 0)
                            {
                                int i = 0;
                                foreach (var employee in Model.Employees)
                                {
                                    <tr>
                                        <td>@(i = i + 1)</td>
                                        <td>@employee.EmployeeId</td>
                                        <td>@employee.Name</td>
                                        <td>@employee.Email</td>
                                        <td>@employee.PhoneNo</td>
                                        <td>@employee.Address</td>
                                        <td>@employee.Age</td>
                                        <td>@employee.BasicSalary</td>
                                        <td>@employee.Department.Name</td>
                                        <td>@employee.District.DistrictName</td>

                                        <td>
                                            @Html.ActionLink("Edit Record", "Edit", "Employee", new { Id = employee.Id }, null)
                                            |
                                            @Html.ActionLink("Delete Record", "Delete", "Employee", new { Id = employee.Id }, null)
                                        </td>

                                    </tr>
                                }

                            }


                        </tbody>
                    </table>

                </div>

            </div>

        </form>

    </div>
</body>
</html>
