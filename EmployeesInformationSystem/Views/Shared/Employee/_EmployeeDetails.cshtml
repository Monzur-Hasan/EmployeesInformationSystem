@model EmployeesInformationSystem.Models.EmployeeViewModel


<table border="1">
    <tr>
        <th>Sl</th>
        <th>Employee Id</th>
        <th>Name</th>
        <th>Phone No</th>
        <th>Email</th>
        <th>Address</th>
        <th>Age</th>
        <th>Basic Salary</th>
        <th>Department</th>
        <th>District</th>
    </tr>


    @{ int i = 1;}
    @foreach (var employee in Model.Employees)
    {
        <tr>
            <td>@(i++)</td>
            <td>@employee.EmployeeId</td>
            <td>@employee.Name</td>
            <td>@employee.PhoneNo</td>
            <td>@employee.Email</td>
            <td>@employee.Address</td>
            <td>@employee.Age</td>
            <td>@employee.BasicSalary</td>
            <td>@employee.Department.Name</td>
            <td>@employee.District.DistrictName</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Employee", new { Id = employee.Id }, null)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Employee", new { Id = employee.Id }, null)
            </td>
        </tr>
    }


</table>


